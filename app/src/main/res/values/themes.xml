<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MilkyWay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_3320a6</item>
        <item name="colorPrimaryVariant">@color/blue_3320a6</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/gray_9a9792</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_3320a6</item>
        <item name="colorSecondaryVariant">@color/blue_3320a6</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="textAppearanceCaption">@font/roboto_regular</item>

        <item name="colorAccent">@color/blue_3320a6</item>



    </style>
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AlertDialogRound8" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="HomeChipTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>