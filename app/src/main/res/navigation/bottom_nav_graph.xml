<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.milkyway.milkyway.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:popUpTo="@id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/reportFragment"
        android:name="com.milkyway.milkyway.ui.report.ReportFragment"
        android:label="ReportFragment"
        tools:layout="@layout/fragment_report">
        <action
            android:id="@+id/action_reportFragment_to_universeFragment"
            app:destination="@id/universeFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/universeFragment"
        android:name="com.milkyway.milkyway.ui.universe.UniverseFragment"
        android:label="fragment_universe"
        tools:layout="@layout/fragment_universe">
        <action
            android:id="@+id/action_universeFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.milkyway.milkyway.ui.setting.SettingFragment"
        android:label="SettingFragment" />

</navigation>