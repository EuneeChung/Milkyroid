<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.milkyway.milkyway.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_homeSearchResult"
            app:destination="@id/homeSearchResult" />
    </fragment>

    <fragment
        android:id="@+id/homeSearchResult"
        android:name="com.milkyway.milkyway.ui.home.HomeSearchResultFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home_search_result">
        <action
            android:id="@+id/action_homeSearchResult_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/reportFragment"
        android:name="com.milkyway.milkyway.ui.report.ReportFragment"
        android:label="ReportFragment"
        tools:layout="@layout/fragment_report" />

    <fragment
        android:id="@+id/universeFragment"
        android:name="com.milkyway.milkyway.ui.universe.UniverseFragment"
        android:label="fragment_universe"
        tools:layout="@layout/fragment_universe" />

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.milkyway.milkyway.ui.setting.SettingFragment"
        android:label="SettingFragment" />


</navigation>